                            </AuthorizeView>
                            <AuthorizeView>
                                <Authorized>
                                    @if (item.WrittenBy.Id.Equals(_user.Id))
                                    {
                                        <button type="button" class="btn btn-warning" @onclick="@(() => ShowEditComment(item))">
                                            Edit
                                        </button>
                                        <button type="button" class="btn btn-danger" @onclick="@(() => removeComment(item))">
