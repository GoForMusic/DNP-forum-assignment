@inherits LayoutComponentBase
@inject NavigationManager navMgr
@using Login

<PageTitle>Best Forum</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <a href="/profile/" class="oi oi-person" style="color: black;" target="_blank"/>
                </Authorized>
                <NotAuthorized>
                </NotAuthorized>
            </AuthorizeView>
            
            
            <LoginButtons/>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{

    private void Profile()
    {
        navMgr.NavigateTo("/profile/");
    }

}